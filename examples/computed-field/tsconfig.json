{
  "compilerOptions": {
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./build",
    "target": "es6",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "lib": ["es6", "dom"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./build", "./node_modules"]
}
